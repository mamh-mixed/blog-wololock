.youtube-widget
  width 100vw
  transform translateX(-50%)
  background #3c444c !important
  color #fafafa
  overflow hidden
  margin 3rem 0 3rem 50%

  h5
    a
      color #fafafa !important

.youtube-row
  margin-bottom 2rem
  margin-top 2rem

  h5
    font-family "Roboto" !important
    font-size 18px
    letter-spacing -1px
    padding 0 !important
    margin 0 !important

    a
      color #555

    .fa-youtube
      color red

  ul.youtube-meta
    list-style none
    margin 0.2rem 0 1rem 0
    padding 0
    font-size 12px
    font-family "Roboto", sans-serif
    color #999

    .fa-youtube
      color #FF0000

    li
      list-style none
      display inline-block
      margin 0
      padding 0

      & + li:before
        content "â€¢"
        font-size 1em
        font-weight 700
        padding 0 7px
  a
    color #e24f4f

  a.thumb
    position relative
    transition all 0.2s ease-in-out 0s
    background #000

    &:hover
      transform scale(1.05)

      img
        transition all 0.2s ease-in-out 0s
        opacity 0.3

      &:before
        opacity 1
        color red

    &::after
      content attr(data-time)
      position absolute
      bottom 10px
      right 10px
      background #000
      border-radius 5px
      padding 2px 5px
      font-size 14px
      font-weight 700
      color #fff
      opacity 0.7

    &::before
      font-family "FontAwesome"
      content "\f167"
      position absolute
      color #fff
      font-size 5rem
      opacity 0.5
      top 50%
      left 50%
      transform: translateY(-50%) translateX(-50%)
      transition all 0.2s ease-in-out 0s

      &:hover
        opacity 1