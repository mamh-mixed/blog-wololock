.get-the-book
  sans-serif()
  font-size 15px
  background #f8f9fa
  color #777 !important
  position relative

  margin-left -1rem
  margin-right 0
  padding 1rem
  padding-top 2rem

  @media phone
    margin-left -1rem
    margin-right -1rem

  h3
    margin 0 0 1rem 0 !important
    padding 0 !important
    font-size 1.6rem !important
    letter-spacing -1px !important
    line-height 150% !important
    serif()

  .description
    margin 0 0 20px 0
    padding 0
    text-align justify

  .affiliate-info
    margin-top 20px
    color #888
    font-size 0.9em
    serif()

    i.fas
      margin-right 10px


.youtube-row
  h5
    font-family "Roboto", sans-serif
    font-size 18px
    font-weight 400
    letter-spacing normal
    line-height 1.3

    a
      color #333
      &:hover
        text-decoration none

  .small
    font-size 13px
    color #888

  a.thumb
    position relative

    &::after
      font-family "FontAwesome"
      content "\f167"
      position absolute
      font-size 60px
      top 17%
      left 35%
      color #fff
      opacity 0.7
      transition all 0.3s

    &::before
      background rgba(0,0,0,0.7)
      display block
      content attr(data-time)
      font-size 13px
      position absolute
      color #f3f3f3
      bottom 5px
      right 5px
      padding 1px 6px
      font-weight bold
      text-shadow #333 2px 2px 2px
      border-radius 3px
      sans-serif()
      //opacity 0.8

