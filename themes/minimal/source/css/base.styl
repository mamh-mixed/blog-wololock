body
  serif()
  font-weight 400
  line-height 1.75
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 20px
  color #555
  overflow-x hidden

h1,h2,h3,h4,h5,h6
  font-family "Poppins", sans-serif
  font-weight 700
  letter-spacing -0.02em
  color #5e6c73
  line-height 1.4 !important

a
  color #468eb0

code
  background #e8eff6
  color #2d86ab
  padding 1px 6px
  border-radius 4px
  font-size 75%
  font-family "Source Code Pro", monospace

.serif
  serif()

.sans-serif
  sans-serif()


#header
  font-family "Montserrat"
  font-size 12px
  line-height 40px
  font-weight bold
  text-transform uppercase
  transition all .25s ease-in-out

  &.header-up
    transform translateY(-90px)

  &.bg-white
    background #fff

  a
    color #666
    display block
    & + a
      margin-left 20px

    &:hover
      text-decoration none
      color #222

  @media phone
    a
      font-size 10px
      & + a
        margin-left 15px

ul.social-media
  sans-serif()
  list-style none
  margin 0
  padding 0
  font-size 20px

  li
    list-style none
    padding 0
    display inline-block

    & + li
      margin-left 12px

    a
      color #aaa

      &:hover
        text-decoration none

      i.fa
        display block
        font-size 24px
        height 40px
        line-height 40px
        width 40px
        text-align center
        background #fff
        border-radius 50%
        margin 0 auto 10px auto
        transition all 0.3s
        //box-shadow #ddd 0 0 5px

        &:hover
          transform scale(1.2) rotate(360deg)

      span.number
        font-weight 700
        font-size 18px
        line-height 20px
        display block
        text-align center
        color #617479

      span.description
        font-size 11px
        text-align center
        display block

@media (min-width: 992px)
  .sidebar-enabled
    position relative

    &:before
      z-index 0
      position absolute
      top 0
      right 0
      width 25%
      height 100%
      content ''
      display block
      background #f8f8f8

.sidebar
  position relative
  background #f8f8f8 !important
  z-index 2
  font-size 15px
  sans-serif()

  a
    color #888
    &:hover
      color #555
      text-decoration none

  .spread-the-love
    color #888 !important

    h5
      display block
      font-size 2rem


    ul
      list-style none
      margin 1rem 0 0 0
      padding 0
      li
        list-style none
        margin 0
        padding 0
        display inline-block
        font-size 30px
        text-align center

        & + li
          margin-left 15px

        a:hover
          text-decoration none

.posts-layout-01
  article
    a:not(.btn)
      color #666
      &:hover
        text-decoration none

    h3
      serif()
    h4
      sans-serif()
      font-size 18px

    p.subtitle
      font-family "Montserrat", sans-serif
      font-size 14px
      font-weight 700
      text-transform uppercase
      >a
        color #7eb8ca

    &.tile
      font-size 80%
      p.subtitle
        font-size 11px

      .post-meta
        margin-bottom 0 !important
        ul
          margin-bottom 5px !important

