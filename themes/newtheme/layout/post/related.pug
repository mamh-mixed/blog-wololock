- var related = popular_posts_json({ maxCount: 3, isImage: true, isExcerpt: true }, page)
- var category = page.categories.first()
- var posts = site.posts.filter(post => related.json.some(it => it.title === post.title)).toArray()

section.related-posts
    .container
        .card-deck
            each post in posts
                +post_card(post)


    .col-12.text-center.mt-5.serif
        h5.h3
            span.small.d-block.mb-2="More posts from"
            span.font-weight-bold.mark #{category.name}

        div
            em.fas.fa-angle-down
        a.stretched-link(href=url_for(category.path))