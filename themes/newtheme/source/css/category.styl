article.list-elem
  border-bottom 1px solid #eee
  margin 0 0 40px 0
  padding 0 0 40px 0
  font-size 1.1rem
  position relative

  &:last-of-type
    border none

  h3
    font-size 3rem
    padding 0
    margin 0 0 30px 0


nav.paginator
  text-align center
  sans-serif()

  > a, > span
    display inline-block
    width 24px
    height 24px
    line-height 24px
    font-size 16px
    text-align center
    background #f3f3f3
    margin 0 4px
    border-radius 50%
    font-weight bold
    color #555

  .current
    background #005cbf
    color #fafafa