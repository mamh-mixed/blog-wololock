#page-category
  h1
    display inline
    text-shadow rgba(0,0,0,0.2) 0 3px 10px

  h2
    font-size 1.8rem
    letter-spacing -1px

article.list-elem
  border-bottom 1px solid #eee
  margin 0 0 40px 0
  padding 0 0 40px 0
  font-size 1.1rem
  position relative
  serif()

  &:last-of-type
    border none

  h3
    font-size 2.5rem
    padding 0
    margin 0 0 30px 0
    word-break break-word

    @media phone
      font-size 1.8rem

  .excerpt
    a
      @media phone
        word-break break-all

  .post-meta
    ul
      @media phone
        font-size 0.8rem




nav.paginator
  text-align center
  sans-serif()

  > a, > span
    display inline-block
    width 24px
    height 24px
    line-height 24px
    font-size 16px
    text-align center
    background #f3f3f3
    margin 0 4px
    border-radius 50%
    font-weight bold
    color #555

  .current
    background #005cbf
    color #fafafa

.youtube-videos
  background #f4f4f6