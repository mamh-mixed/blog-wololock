@import "index.styl"

.faded-text
  max-height 300px
  position relative
  overflow hidden
  background linear-gradient(to bottom, #f3f3f3 50%, rgba(0, 0, 0, 0) 80%) !important
  -webkit-background-clip text !important
  -webkit-text-fill-color transparent !important

ul.post-meta
  text-align left
  list-style none
  margin 0
  padding 0
  font-size 0.8rem

  li
    list-style none
    display inline-block
    &::after
      content ' / '
      color #ccc
      padding 0 5px
    &:last-child
      &::after
        content ''
