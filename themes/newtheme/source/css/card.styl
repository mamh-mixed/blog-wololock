.card
  background transparent !important

  .card-body
    background #fcfcfc
    font-size 14px
    text-align justify

    .post-meta
      ul
        font-size 0.9em !important
        color #777

  .card-header
    height 200px
    position relative
    background-size cover
    background-position top left
    background-repeat no-repeat

    h2,h3,h4
      position absolute
      bottom 10px
      max-width 90%
      z-index 1

      div.title
        padding 10px

  .faded-text
    max-height 300px

.jumbotron
  .card
    box-shadow none !important
    border none !important
    background linear-gradient(to bottom, rgba(0,0,0,0.5) 50%, rgba(0, 0, 0, 0) 90%) !important

  .card-body
    height 250px
    position relative
    overflow hidden
    background linear-gradient(to bottom, #f3f3f3 50%, rgba(0, 0, 0, 0) 90%) !important
    -webkit-background-clip text !important
    -webkit-text-fill-color transparent !important

    .post-meta
      font-weight 700