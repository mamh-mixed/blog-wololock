body
  sans-serif()
  font-weight 400
  font-size 20px
  color #444
  overflow-x hidden

  @media phone
    font-size 16px

h1,h2,h3,h4
  font-family 'Source Sans Pro', sans-serif
  font-weight 700
  font-size 3.5rem
  letter-spacing -2px

  code
    letter-spacing 0 !important

  @media phone
    font-size 2.5rem
    letter-spacing -1px

h2
  font-size 2.5rem
  @media phone
    font-size 2rem

h3
  font-size 2rem
  @media phone
    font-size 1.6rem

h4
  font-size 1.6rem
  letter-spacing -1px
  @media phone
    font-size 1.2rem

a
  color #1c92aa
  transition all 0.2s ease-in-out 0s
  text-decoration none

  &:hover
    text-decoration none
    color orangered
    border none

nav
  a
    text-decoration none
    border none

.jumbotron
  padding-top 150px
  border-radius 0
  background url("../img/index-bg.jpg") top right
  position relative
  background-size cover
  color #fff
  margin-bottom 0

  a
    text-decoration none
    border none

  @media phone
    padding-top 100px


ul
  @media phone
    padding-left 2em

.mark
  background #ffd88b
  padding 4px 6px
  color #232323

a.category
  text-decoration none
  display inline-block
  padding 5px 10px
  text-transform uppercase
  background #ffd100
  color #292929
  font-weight bold
  font-size 0.7em

.post-meta
  ul
    text-align left
    list-style none
    margin 0
    padding 0
    font-size 0.9rem

    li
      list-style none
      display inline-block
      &::after
        content ' / '
        color #ccc
        padding 0 5px
      &:last-child
        &::after
          content ''

.container
  position relative
  z-index 10

.mask
  background linear-gradient(to top, rgba(0, 0, 0, 0.7) 20%, rgba(0, 0, 0, 0) 90%) !important
  position absolute
  width 100%
  height 100%
  left 0
  bottom 0

.get-the-book
  roboto()
  font-size 16px
  background #fafafb
  width: 100vw
  margin-left 50%
  transform translateX(-50%)
  padding 40px 0

  h3
    margin 30px 0 !important
    padding 0 !important

  .description
    margin 0 0 20px 0
    padding 0

  .affiliate-info
    margin-top 20px
    color #888
    font-size 0.9em
    serif()

    i.fas
      margin-right 10px

code
  background #ebf2f6
  color #4271ae
  padding 3px 6px
  border-radius 5px
  font-size 0.7em


.img-lazyload-container
  display inline-block

.formkit-form
  margin 40px auto !important
  max-width 100% !important
  background #fafafa !important
  sans-serif()

  input
    padding 10px !important

  .formkit-column
    padding 30px !important

  .formkit-background
    border-right 1px solid #ddd !important

  .formkit-disclaimer
    p
      text-align center

  a
    border none

  h1
    text-align center
    color #777 !important
    font-size 1.8rem !important
    font-weight 900 !important
    padding 0 0 0 0 !important
    margin 0 !important
    line-height 2.2rem



.fa-twitter
  color #1889ba

.fa-github
  color #444

.fa-stack-overflow
  color #d07500

.fa-youtube
  color #cb0909

[class*=text-underline-]
  background-repeat no-repeat
  background-size 100% 0.4em
  background-position 0 70%
  padding-left 5px
  padding-right 5px
  margin-left -5px
  margin-right -5px

.text-underline-warning
  background-image -webkit-gradient(linear,left top,right top,from(rgba(245,192,112,.4)))
  background-image -o-linear-gradient(left,rgba(245,192,112,.4))
  background-image linear-gradient(to right,rgba(245,192,112,.4))
