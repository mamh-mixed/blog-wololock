#page-home
  .lead
    font-size 1rem

  .sec
    padding 4rem 0

    h2
      text-align center
      font-weight 700
      font-size 3rem
      padding 0 0 3rem 0
      color #c4d5e2
      font-family "Quicksand"

      span.small
        font-size 1.5rem
        letter-spacing -1px
        color #ccc

  .latest-comments
    font-size 1.1rem

    .dsq-widget-avatar
      border-radius 50%
      margin -3px 3px 3px 0

  .latest-video
    .desc
      font-size 0.9rem
      text-align justify

  .most-popular-posts
    .post
      position relative
      color #666

      .rank
        font-size 7rem
        line-height 6.8rem
        font-weight 700
        color #f3f3f3
        position absolute
        top 0
        left 0
        z-index 0

      .data
        position relative
        z-index 1
        padding-left 5rem

        h3
          font-size 1.7rem

        p.lead
          text-align justify

