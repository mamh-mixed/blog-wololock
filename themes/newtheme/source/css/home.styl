#page-home
  .lead
    font-size 1rem

  .sec
    padding 4rem 0

    h2
      text-align center
      font-weight 700
      font-size 3rem
      padding 0 0 3rem 0
      color #c4d5e2
      font-family "Quicksand"

      span.small
        font-size 1.5rem
        letter-spacing -1px
        color #ccc

  .latest-comments
    font-size 1rem

    ul.dsq-widget-list
      margin 0
      padding 0
      font-size 0.8em

      >li.dsq-widget-item
        .dsq-widget-avatar
          border-radius 50%
          margin-top 0.6em

        .dsq-widget-user
          display none

        .dsq-widget-comment
          position relative
          background color-bubble-speech
          border-radius .6em
          display block
          padding 0.5rem 1rem
          margin 0 0 0 65px

          &:after
            content ''
            position absolute
            left 0
            top 50%
            width 0
            height 0
            border 15px solid transparent
            border-right-color color-bubble-speech
            border-left 0
            border-bottom 0
            margin-top -7.5px
            margin-left -15px

            @media phone
              top 20%
              left 1px

        p.dsq-widget-meta
          text-align right
          margin 0.5rem 1rem 0 2rem
          font-size 0.8rem

  .latest-video
    .desc
      font-size 0.9rem
      text-align justify

  .most-popular-posts
    .post
      position relative
      color #666

      .rank
        font-size 7rem
        line-height 6.8rem
        font-weight 700
        color #f3f3f3
        position absolute
        top 0
        left 0
        z-index 0

      .data
        position relative
        z-index 1
        padding-left 5rem

        h3
          font-size 1.7rem

        p.lead
          text-align justify

