#page-home
  .lead
    font-size 1rem

  .sec
    padding 4rem 0
    @media phone
      padding 2rem 0

    h2
      text-align center
      font-weight 700
      font-size 4rem
      padding 0 0 3rem 0
      margin 0
      color #d7d9db

      @media phone
        font-size 2.5rem !important
        padding-bottom 1.5rem

      span.small
        font-size 1.5rem
        letter-spacing -1px
        color #ddd

  .latest-comments
    font-size 1rem
    h2
      color color-light-purple

    ul.dsq-widget-list
      margin 0
      padding 0
      font-size 0.8em

      >li.dsq-widget-item
        position relative
        padding-left 64px

        .dsq-widget-avatar
          border-radius 50%
          position absolute
          top 0
          left 0

        .dsq-widget-user
          display none

        .dsq-widget-comment
          position relative
          background color-bubble-speech
          border-radius .6em
          display block
          padding 0.5rem 1rem
          margin 0

          &:after
            content ''
            position absolute
            left 0
            top 50%
            width 0
            height 0
            border 15px solid transparent
            border-right-color color-bubble-speech
            border-left 0
            border-bottom 0
            margin-top -7.5px
            margin-left -15px

            @media phone
              top 20%
              left 1px

        p.dsq-widget-meta
          text-align right
          margin 0 5px 0 2rem
          font-size 0.8rem
          @media phone
            font-size 0.6rem
            margin-top 5px

  .latest-video

    .desc
      font-size 0.9rem
      text-align justify

    h2
      color #bbb
      font-weight 400
      font-size 3rem

    .youtube
      letter-spacing -4px
      font-weight 700
      color #333

    .small
      color #bbb !important


  .most-popular-posts
    .post
      position relative
      color #666

      a.category
        font-size 0.7rem

      .rank
        font-size 7rem
        line-height 6.8rem
        font-weight 700
        color #f3f3f3
        position absolute
        top 0
        left 0
        z-index 0
        letter-spacing -8px

        @media phone
          left 10px

      .data
        position relative
        z-index 1
        padding-left 5rem

        @media phone
          padding-left 2rem
          padding-right 1rem

        h3
          font-size 1.7rem
          line-height 2rem
          margin 5px 0 10px 0
          a
            color inherit

        p.lead
          text-align justify

  .newsletter
    background #ffba30
    background-image: linear-gradient(to top, #ffba30 0%, #ffcd72 80%);
    color #5a473e
    serif()
    font-size 1.3rem

    h2
      color #fff
      display inline
      padding 0 0 20px 0
      serif()

    .formkit-form
      background none !important
      max-width inherit

      input[type="text"]
        border-color #ffbd00 !important
        box-shadow rgba(0,0,0,0.08) 0 5px 5px
        color #777 !important
        font-size 1.1rem !important
        sans-serif()

      button.formkit-submit
        font-weight bold !important
        font-size 1.3rem

